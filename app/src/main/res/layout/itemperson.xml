<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="?attr/selectableItemBackground"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/person_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/view_fio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Караев Юрий Хаджимуратович"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/view_fio">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/view_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="г.р. 1966"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/view_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="г.Минск"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/view_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Советский район"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/view_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Генерал-майор"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/view_organization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Министерство Обороны"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/view_organization2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Министр внутренних дел"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>